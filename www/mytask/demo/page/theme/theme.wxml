<!--index.wxml-->
<view class="container"> 
<view class='method'>
  <view class='gooditem' wx:for="{{hotgoods}}" wx:for-index="idx" wx:for-item="good" id="{{good.viewid}}" bindtap="listClick">
    
      <view class='imgview'>
        <image class='productimg' src='{{good.pic_url}}'/>
      </view>
      <view class="goodinfo clear">
        <view class="good-name fl">{{good.name}}</view>
        <view class="good-price fr">{{good.price}}</view>
      </view>
  </view>
</view>
</view>
