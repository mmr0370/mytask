/**index.wxss**/
.fl{ float:left;}
.fr{ float:right;}
.clear { zoom:1; }
.clear:after { content:''; display:block; clear:both; }

.container{
  width:100%;
  padding:0 4% 40px;
}
.method{
  width:100%;
}
.gooditem{
  margin-top:50rpx;
  width:100%;
  position:relative;
  height:300rpx;
  box-shadow: 10rpx 0 10rpx #ccc;
}
.productimg{
  width:100%;
  height:300rpx;
}
.goodinfo{
 width:96%;
  position:absolute;
  top:200rpx;
  z-index:3;
  background: rgba(0,0, 0, 0.4);
  color:#fff;
  margin:10rpx auto 0;
  padding:0 2%;
}
.good-name{
  font-size:36rpx;
  display:block;
  white-space:nowrap; 
  overflow:hidden; 
  text-overflow:ellipsis;
  line-height:1.4em;
  
}
.good-price{
  font-size:30rpx;
  width:96%;
  white-space:nowrap; 
  overflow:hidden; 
  text-overflow:ellipsis;
  line-height:1.6em;
}